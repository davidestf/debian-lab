---
- name: firewall
  hosts: webserver001
  become: true

  tasks:
    - name: Update and upgrade apt packages
      apt:
       update_cache: yes
       upgrade: "yes" 

    - name: Install UFW
      apt:
       name: ufw
       state: present
    - name: Setup rules
      command: "{{ item }}"
      with_items:
        - ufw default deny incoming
        - ufw default allow outgoing
        - ufw allow from 0.0.0.0 to any port 22
       #- ufw allow ssh
        - ufw allow http
        - ufw allow https
        - ufw --force enable

